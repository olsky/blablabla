{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Override",
    "type": "object",
    "required": [
        "id",
        "epic",
        "actor",
        "reason",
        "final_status",
        "created_at"
    ],
    "properties": {
        "id": {
            "type": "string",
            "pattern": "^OV-[0-9]{4}$"
        },
        "epic": {
            "type": "string",
            "pattern": "^EP-[0-9]{4}$"
        },
        "actor": {
            "type": "string"
        },
        "reason": {
            "type": "string"
        },
        "final_status": {
            "type": "string",
            "enum": [
                "approved",
                "rejected",
                "overridden"
            ]
        },
        "created_at": {
            "type": "string",
            "format": "date"
        }
    }
}